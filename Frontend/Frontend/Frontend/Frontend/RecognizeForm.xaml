<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.RecognizeForm">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="ImageVal"/>
            <Button Text="Выбрать изображение" Clicked="GetPhoto"/>
            <Button Text="Показать историю разпознаваний" Clicked="GoToHistory"/>
            <Label x:Name="Result"/>
            <Button Text="Выйти" Clicked="SigOut"/>
            <Button Text="Создать букет" Clicked="GoToGenerate"/>
            <Button Text="Посмотреть историю генераций" Clicked="GoToGenerationHistory"/>
            <Button Text="Посмотреть публичные посты" Clicked="GoToPublicList"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>