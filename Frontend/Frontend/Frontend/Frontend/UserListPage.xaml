<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.UserListPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Users" ItemsSource="{Binding}" ItemSelected="GoToUser">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Surname}"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Выйти" Clicked="SigOut"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>