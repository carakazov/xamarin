<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.RegisterForm">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="nameField" Placeholder="Имя" ClearButtonVisibility="WhileEditing"/>
            <Entry x:Name="surnameField" Placeholder="Фамилия" ClearButtonVisibility="WhileEditing"/>
            <Entry x:Name="loginField" Placeholder="Логин" ClearButtonVisibility="WhileEditing"/>
            <Entry x:Name="passwordField" Placeholder="Пароль" IsPassword="True" ClearButtonVisibility="WhileEditing"/>
            <Button Text="Зарегестрироваться" Clicked="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>